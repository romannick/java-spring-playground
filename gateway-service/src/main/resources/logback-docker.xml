<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <property name="CONSOLE_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSS} [%X{X-Trace-Id}] %-5level [%thread] %logger{36} - %msg%n"/>
    <property name="LOKI_URL" value="http://promtail:3100/loki/api/v1/push"/>
<!--    <property name="APP_NAME" value="my-app"/>-->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %highlight(${CONSOLE_PATTERN})
            </pattern>
        </encoder>
    </appender>
    <appender name="LOKI" class="com.github.loki4j.logback.Loki4jAppender">
        <url>${LOKI_URL}</url>
        <batchSize>50</batchSize>
        <batchWait>500ms</batchWait>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
<!--            <customFields>{"app":"${APP_NAME}"}</customFields>-->
            <includeMdcKeyNames>
                <key>X-Trace-Id</key>
            </includeMdcKeyNames>
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <level>level</level>
                <thread>thread</thread>
                <logger>logger</logger>
                <message>message</message>
            </fieldNames>
        </encoder>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="LOKI"/>
    </root>
    <logger name="org.springframework" level="INFO"/>
    <logger name="reactor.netty" level="WARN"/>
    <logger name="io.netty" level="WARN"/>
</configuration>
