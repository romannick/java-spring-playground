{
  "id": null,
  "uid": null,
  "title": "Product Service Metrics",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "title": "HTTP Requests Count",
      "type": "graph",
      "targets": [
        {
          "expr": "http_server_requests_seconds_count{application='product-service'}",
          "legendFormat": "{{uri}}",
          "interval": ""
        }
      ]
    },
    {
      "title": "HTTP Requests Latency",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(http_server_requests_seconds_sum{application='product-service'}[1m]) / rate(http_server_requests_seconds_count{application='product-service'}[1m])",
          "legendFormat": "{{uri}}",
          "interval": ""
        }
      ]
    },
    {
      "title": "JVM Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "jvm_memory_used_bytes{application='product-service',area='heap'}",
          "legendFormat": "Heap"
        },
        {
          "expr": "jvm_memory_used_bytes{application='product-service',area='nonheap'}",
          "legendFormat": "Non-Heap"
        }
      ]
    },
    {
      "title": "JVM GC Pause Time",
      "type": "graph",
      "targets": [
        {
          "expr": "jvm_gc_pause_seconds_sum{application='product-service'}",
          "legendFormat": "GC Pause Total"
        }
      ]
    },
    {
      "title": "Custom Metrics Example",
      "type": "graph",
      "targets": [
        {
          "expr": "api_products_get_id_seconds_count",
          "legendFormat": "Get Product by ID"
        }
      ]
    }
  ]
}
